@model LoginInMVC4WithEF.Models.Registration

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="~/content/css/common.css" rel="stylesheet" />
    <link href="~/content/css/195.css" rel="stylesheet" />
    <link href="~/content/css/itw.css" rel="stylesheet" />
    <link href="~/content/css/login.css" rel="stylesheet" />
    
</head>



@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login Failed, check details");
    <div>
        <fieldset>
            <td>
                <div class="container" style="width: 100%">
                    <div class="row divLogo">
                        <div class="col-xs-10">
                            <img src="~/images/logo.png" class="img-responsive" />
                        </div>
                        
                    </div>
                    <div class="row">
                    </div>
                    <div class="navbar navbar-default">
                        <div class="navbar-header">

                        </div>
                        <div class="navbar-collapse collapse navbar-responsive-collapse">
                            <div class="navbar-center">

                            </div>
                        </div>
                    </div>
                </div>
            </td>
            <div id="divSignupExisting" class="container" style="width: 100%;">
                <div class="row">
                    <div class="col-xs-12 col-sm-7" style="text-align: left;">

                        <table border="0" class="col-xs-12 col-sm-9" cellpadding="2" cellspacing="0"></table>
                        <tbody>
                            <tr>
                                <td width="350">
                                    <div id="divContent" class="f2">
                                        <table style="height: 283px;" width="695">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <h1 style="text-align: center;">Demo Site 2015</h1>
                                                    </td>
                                                </tr>

                                            </tbody>
                                        </table>
                                        <h1 style="text-align: center;">&nbsp;</h1>
                                        <h1 style="text-align: center;">&nbsp;</h1>


                                    </div>
                                </td>
                            </tr>

                        </tbody>

                    </div>
                    <div class="col-xs-12 col-sm-3" style="margin-top: 50px;" id="loginbox">
                        <div id="tdFrontPageLogin">
                            <div style="padding-top: 10px;padding-bottom: 0px;">
                                <div id="divInro" class="t4orangeb" style="padding-bottom: 10px; padding-left: 10px;">Login Here.</div>
                                <div id="tblLogin" style="border: solid 1px #ffffff; padding: 5px 5px 5px 5px;">
                                    <div class="LoginBox" style="padding: 15px 5px 5px 5px;">

                                        <div class="input-group" style="margin-bottom: 10px">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            @Html.TextBoxFor(u => u.Email, new { @class = "form-control", placeholder = "Email", autocomplete = "off" })
                                        </div>
                                        <div class="input-group" style="margin-bottom: 10px">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                            @Html.PasswordFor(u => u.Password, new { @class = "form-control", placeholder = "Password", autocomplete = "off" })
                                        </div>

                                        <div class="input-group" style="margin-top: 10px">
                                            <!-- Button -->
                                            <div class="col-sm-2 controls"></div>
                                            <div class="col-sm-1 controls">

                                                <input type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-login button-login" value="Login" onclick="return Login()">
                                            </div>
                                        </div>
                                        <div id="divDonorRegistration" class="input-group">
                                            <div class="col-sm-12 control">
                                                <div class="password-login" style="padding-top: 10px; padding-bottom: 10px; padding-left: 10px;">
                                                    <a href="/User/Register" id="linkDonorRegistration" target="_self">
                                                        <img src="/images/event_sign_up.png" alt="Registration now" border="0">&nbsp;&nbsp;&nbsp;Click here to registration now
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group">
                                            <div class="col-sm-12 control">
                                                <div class="password-login" style="padding-top: 15px; padding-bottom: 10px;  padding-left: 10px;">
                                                    <a href="ForgetPasswordCS.aspx">
                                                        <img src="/images/icon_reset_pw.png" alt="Lost password" border="0">&nbsp;&nbsp;&nbsp;Forgot your Password - Click Here
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="padding: 10px 0 10px 40px;">
                                    <table cellpadding="2" cellspacing="0" border="0">
                                        <tbody>
                                            <tr>
                                                <td class="t4orangeb" style="padding-right: 10px">
                                                    <div id="tdSocialLink" style="display:block;">
                                                        <span class="t2">Follow</span> <span id="spnShortName" class="t2"></span><span class="t2">&nbsp;on:</span>
                                                    </div>
                                                </td>
                                                <td id="tdURL1" class="t2"><a target="_blank" href="https://www.facebook.com/"><img src="/images/facebook.png" style="width:25px;height:25px;border:0px;"></a></td>

                                                <td id="tdURL2" class="t2"></td>

                                                <td id="tdURL3" class="t2"><a target="_blank" href="https://twitter.com/"><img src="/images/twitter.png" style="width:25px;height:25px;border:0px;"></a></td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
}
        </div>
